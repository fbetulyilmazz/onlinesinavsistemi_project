    <link rel="icon" type="image/png" href="/tmp/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/tmp/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
